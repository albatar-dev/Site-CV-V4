{% extends 'base.html.twig' %}

{% block title "Jocelyn ARZUR | Accueil" %}

{% block body %}
	<div class="container">
		<section class="row">
			{% for text in donnees %}
				<article class="card w-100 my-3">
					<h5 class="card-header">
						<strong>{{ text.titre }}</strong>
					</h5>
					<div class="card-body">
						<p class="card-text">{{text.texte}}</p>
					</div>
					{% if user != null and user.roles[0] == "ROLE_ADMIN" %}
						<div class="card-footer">
							<a href="{{ path('accueil.edit', {'id': text.id }) }}" class="btn btn-outline-warning">Edit</a>
						</div>
					{% endif %}
				</article>

			{% endfor %}

		</section>
	</div>
{% endblock %}
