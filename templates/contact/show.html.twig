{% extends "base.html.twig" %}

{% block body %}
	<div class="container w-75">

		{% for message in messages %}
			<div class="card m-3">
				<div class="card-header">
					<div class="row">
						<h5 class="col-lg-7">{{ message.titreMessage}}</h5>
						<p class="text-muted">{{ message.datePost | date('d/m/Y H:m') }}</p>
					</div>
				</div>
				<div class="card-body">
					<h5 class="card-title">{{ message.nom ~' '~ message.prenom }}
					</h5>
					<p class="card-text">{{ message.message }}</p>
				</div>
				{% if message.entreprise != null %}
					<div class="card-footer">
						{{ message.entreprise }}
					</div>
				{% endif %}
			</div>
		{% endfor %}

	</div>

{% endblock %}
